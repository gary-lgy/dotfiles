" vim: ft=vim
" Configurations
set externalclipboardcmd xclip
set hintfiltermode vimperator
set hintnames numeric
set homepages ["duckduckgo.com"]
set incsearch true
set modeindicatorshowkeys true
set newtabfocus urlbar
set scrollduration 150
set searchengine duckduckgo
set theme dark
guiset gui full

" Normal mode key-bindings
unbind j
unbind k
bind j scrollline 5
bind k scrollline -5
bind J tabnext
bind K tabprev
unbind d
unbind u
bind d scrollpage 0.5
bind u scrollpage -0.5
bind x tabclose
bind X undo

" input mode key-bindings
" The rest can be set from GTK settings
bind --mode=input <A-BS> text.backward_kill_word
