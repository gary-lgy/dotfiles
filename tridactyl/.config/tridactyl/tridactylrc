" vim: ft=vim
" Configurations
set allowautofocus        false
set auconcreatecontainer  true
set blacklistkeys         []
set browser               $BROWSER
set containerindicator    true
set csp                   clobber
set cursorpos             end
set editorcmd             auto
set externalclipboardcmd  xclip
set findcase              smart
set findcontextlen        100
set findresults           -1
set gimode                nextinput
set hintchars             "hjklasdfgyuiopqwertnmzxcvb"
set hintdelay             300
set hintfiltermode        vimperator-reflow
set hintnames             numeric
set hintuppercase         true
set historyresults        50
set homepages             ["duckduckgo.com"]
set incsearch             true
set jumpdelay             3000
set leavegithubalone      false
set minincsearchlen       3
set modeindicator         true
set modeindicatorshowkeys true
set newtab                duckduckgo.com
set newtabfocus           page
set noiframe              false
set perfcounters          false
set putfrom               clipboard
set relatedopenpos        related
set scrollduration        150
set searchengine          duckduckgo
set smoothscroll          false
set storageloc            sync
set tabopencontaineraware true
set tabopenpos            next
set theme                 dark
set yankto                clipboard
guiset gui                full

" Normal mode key-bindings
unbind j
unbind k
bind   j scrollline 5
bind   k scrollline -5
bind   J tabnext
bind   K tabprev
unbind d
unbind u
bind   d scrollpage 0.5
bind   u scrollpage -0.5
bind   x tabclose
bind   X undo
unbind D
bind   D tabduplicate

" input mode key-bindings
" The rest can be set from GTK settings
bind --mode=input <A-BS> text.backward_kill_word

" Commandline mode key-bindings
bind --mode=ex <C-[> ex.hide_and_clear
bind --mode=ex <C-p> ex.prev_history
" bind --mode=ex <C-n> ex.next_history

" Search urls
set searchurls.gg  https://www.google.com/search?q=
set searchurls.ddg https://duckduckgo.com/?q=
set searchurls.gh  https://github.com/search?utf8=âœ“&q=
set searchurls.mdn https://developer.mozilla.org/en-US/search?q=
set searchurls.aur https://aur.archlinux.org/packages/?K=
set searchurls.aw  https://wiki.archlinux.org/index.php?search=
