! Scroll Behavior{{{
! Do not scroll with output
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

! Do not follow secondary buffer (e.g. less)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Scroll Bar
URxvt.scrollBar: false
!}}}

! Perl Extensions{{{
URxvt.perl-ext-common: default,url-select,keyboard-select

! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true

! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!}}}

! Appearance{{{
! Colorscheme
URxvt.foreground: #b2b2b2
! URxvt.background: #171a1b
URxvt.background: Black
! Black
URxvt.color0: #2e3436
URxvt.color8: #777979
! Red
URxvt.color1: #e20800
URxvt.color9: #bf0303
! Green
URxvt.color2: #00bf00
URxvt.color10: #37a42b
! Yellow
URxvt.color3: #f3c300
URxvt.color11: #ffd500
! Blue
URxvt.color4: #2b76c7
URxvt.color12: #2b74c7
! Magenta
URxvt.color5: #e85290
URxvt.color13: #ff80e0
! Cyan
URxvt.color6: #17b2b2
URxvt.color14: #54ffff
! White
URxvt.color7: #d3d7cf
URxvt.color15: #f3f3f3

! Fonts
URxvt*font: xft:monospace:size=10,\
            xft:Noto Sans Mono:size=10,\
            xft:Font Awesome 5 Free,\
            xft:Font Awesome 5 Brands
URxvt.letterspace: -2
!}}}

