root = true

[*]
charset                  = utf-8
end_of_line              = lf
max_line_length          = off
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{sh,bash,zsh,fish}]
indent_style             = space
indent_size              = 2
max_line_length          = 200

[*.py]
indent_style             = space
indent_size              = 4
max_line_length          = 120

[*.{java,kt}]
indent_style             = space
indent_size              = 4
max_line_length          = 120

[*.{c,cpp,h,hpp}]
indent_style             = space
indent_size              = 4
max_line_length          = 80

[*.rb]
indent_style             = space
indent_size              = 2
max_line_length          = 80

[*.{html,xml}]
indent_style             = space
indent_size              = 4
max_line_length          = 200

[*.md]
indent_style             = space
indent_size              = 2
trim_trailing_whitespace = false

[*.tex]
indent_style             = space
indent_size              = 2
max_line_length          = 80

[*.vim]
indent_style             = space
indent_size              = 2
max_line_length          = 100

[*.{js,jsx,ts,tsx}]
indent_style             = space
indent_size              = 2
max_line_length          = 100

[*.swift]
indent_style             = space
indent_size              = 4
max_line_length          = 150
