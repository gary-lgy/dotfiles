root = true

[*]
charset                  = utf-8
end_of_line              = lf
max_line_length          = off

[*.{sh,bash,zsh,fish}]
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 200
trim_trailing_whitespace = true

[*.py]
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 100
trim_trailing_whitespace = true

[*.java]
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 120
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp}]
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 80
trim_trailing_whitespace = true

[*.rb]
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 80
trim_trailing_whitespace = true

[*.{html,xml}]
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 200
trim_trailing_whitespace = true

[*.md]
insert_final_newline     = true
indent_style             = space
indent_size              = 2
trim_trailing_whitespace = false

[*.tex]
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 80
trim_trailing_whitespace = true

[*.vim]
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 100
trim_trailing_whitespace = true
