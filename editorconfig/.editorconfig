root = true

[*]
charset                  = utf-8
end_of_line              = lf
max_line_length          = off

[*.{sh,bash,zsh,fish}]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 200
trim_trailing_whitespace = true

[*.py]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 100
trim_trailing_whitespace = true

[*.java]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 80
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp}]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 4
max_line_length          = 80
trim_trailing_whitespace = true

[*.rb]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 80
trim_trailing_whitespace = true

[*.{html,xml}]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 200
trim_trailing_whitespace = true

[*.md]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = off
trim_trailing_whitespace = false

[*.tex]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 80
trim_trailing_whitespace = true

[*.vim]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
max_line_length          = 100
trim_trailing_whitespace = true
