[credential]
    helper = cache
[core]
    pager = delta
    excludesFile = ~/.gitignore_global
[pager]
    show = delta --paging=always
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    # Delta, required for git 2.37.0
    useBuiltin = false
[push]
    default = simple
    followTags = true
[pull]
    ff = only
[merge]
    conflictstyle = diff3
[diff]
    ; https://git-scm.com/docs/git-diff#Documentation/git-diff.txt---color-movedltmodegt
    ; show moved lines
    colorMoved = default
    colorMovedWS = ignore-space-change

[delta]
    navigate = true    # use n and N to move between diff sections
    ; https://github.com/dandavison/delta#--color-moved-support
    features = line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

; local overrides
[include]
    path = ~/.local.gitconfig
