{
  "title": "Rearrange modifiers",
  "rules": [
    {
      "description": "Right command -> MEH",
      "manipulators": [
        {
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 1452,
                  "is_keyboard": true,
                  "description": "Apple built-in keyboard"
                }
              ]
            }
          ],
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Right option -> Left ctrl",
      "manipulators": [
        {
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 1452,
                  "is_keyboard": true,
                  "description": "Apple built-in keyboard"
                }
              ]
            }
          ],
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Left ctrl -> HYPER",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 1452,
                  "is_keyboard": true,
                  "description": "Apple built-in keyboard"
                }
              ]
            }
          ],
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
